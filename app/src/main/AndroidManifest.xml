<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_pablo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pablo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrassTarea"
        tools:targetApi="34">

        <activity
            android:name=".preferencias.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
        android:name=".actividades.EstadisticasActivity"
        android:exported="false" />
        <activity
            android:name=".actividades.DetallesActividad"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".actividades.EditarTareaActivity"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".actividades.CrearTareaActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.ListadoTareasActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>